<%= form_for(@micropost, :remote=>true) do |f| %>
  <%= render 'shared/error_messages', :object => f.object %>
  <div class="field">
    <%= f.text_area :content %>
  </div>
  <div class="field">
    <%= f.label :tag_list %>  <%= f.text_field :tag_list %>
  </div>
  <div class="actions">
    <%= f.submit "Submit" %>
  </div>
<% end %>